<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipToOutline="true"
        android:background="@drawable/android_2">
    <RelativeLayout
            android:layout_width="379dp"
            android:layout_height="600dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/frame_24" android:layout_marginTop="0dp">
        <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="379dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/search">
            <View
                    android:id="@+id/search_bg"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/search_bg"
            />
            <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/search_field"
                    android:elevation="3dp">
                <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:outlineProvider="background"
                        android:layout_marginTop="12dp"
                        android:clipToOutline="true"
                        android:background="@drawable/bx_search_s">
                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/vector">
                    </View>
                </RelativeLayout>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="64dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="48dp"
                        android:layout_alignParentTop="true"
                        android:text="@string/search"
                        android:textAppearance="@style/search"
                        android:lineSpacingExtra="5sp"
                        android:gravity="center_vertical">
                </TextView>
                <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/mic">
                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/mic_1"
                    />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="379dp"
                android:layout_height="520dp"
                android:background="@drawable/frame_18"
                android:layout_alignParentBottom="true" android:layout_marginBottom="20dp">
            <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="379dp"
                    android:layout_height="156dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/frame_15">
                <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="156dp"
                        android:layout_height="156dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/menucard"
                        android:elevation="5dp">
                    <RelativeLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="124dp"
                            android:layout_height="124dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="16dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/frame_11">
                        <View
                                android:layout_width="124dp"
                                android:layout_height="91dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/rectangle_1">
                        </View>
                        <TextView
                                android:layout_width="124dp"
                                android:layout_height="17dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="107dp"
                                android:text="@string/card_text_1"
                                android:textAppearance="@style/card_text_1"
                                android:gravity="center_horizontal|top"
                        />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>